<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authetications.Auth_Sign_In"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/backgroudColor"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/textBoxColor"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:padding="16dp"
        />
    <EditText
        android:id="@+id/et_email_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/actionButtonColor"
        android:hint="@string/email_example"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:padding="16dp"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textBoxColor"
        android:text="@string/password"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:padding="16dp"
        />
    <EditText
        android:id="@+id/et_password_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:padding="16dp"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:onClick="sign_In_Handler"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:id="@+id/bt_login_sign_in"
        android:background="@drawable/rounded_confirmbutton"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:id="@+id/bt_sign_up"
            android:background="@drawable/rounded_credentials_button"
            android:onClick="sign_Up_Handler"
            />

</LinearLayout>