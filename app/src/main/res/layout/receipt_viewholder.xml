<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:id="@+id/iv_receipt_image"
                android:padding="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receipt_location"
                android:layout_toRightOf="@+id/iv_receipt_image"
                android:layout_alignParentTop="true"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receipt_date"
                android:layout_toRightOf="@+id/iv_receipt_image"
                android:layout_below="@+id/tv_receipt_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_receipt_price"
                android:layout_toRightOf="@+id/iv_receipt_image"
                android:layout_below="@+id/tv_receipt_date"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>